{
  "name": "green-api-autotests",
  "version": "1.0.0",
  "description": "Autotests for WhatsApp message sending and receiving via GREEN-API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:api": "jest tests/sendMessage.test.ts tests/getChatHistory.test.ts tests/getStateInstance.test.ts",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:selenium": "jest tests/selenium",
    "test:selenium:headed": "set HEADLESS=false&& jest tests/selenium",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "clean": "rd /s /q dist coverage 2>nul || exit 0",
    "prebuild": "npm run clean",
    "pretest": "npm run build"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/selenium-webdriver": "^4.1.15",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "selenium-webdriver": "^4.15.0",
    "chromedriver": "^120.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1"
  },
  "keywords": [
    "green-api",
    "whatsapp",
    "automation",
    "testing",
    "selenium",
    "jest",
    "typescript",
    "api-testing",
    "qa",
    "test-automation"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vagap85/green-api-autotests"
  },
  "bugs": {
    "url": "https://github.com/vagap85/green-api-autotests/issues"
  },
  "homepage": "https://github.com/vagap85/green-api-autotests#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist",
    "src",
    "tests"
  ]
}